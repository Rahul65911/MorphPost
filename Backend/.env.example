# MorphPost Backend Environment Variables

# Database
DATABASE_URL=postgresql+asyncpg://morphpost:yourpassword@localhost:5432/morphpost

# JWT Authentication
JWT_SECRET_KEY=your-secret-key-at-least-32-characters-long-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis (for background workers)
REDIS_HOST=localhost
REDIS_PORT=6379

# LangGraph Configuration
LANGGRAPH_MAX_ITERATIONS=3
EVALUATION_SCORE_THRESHOLD=85

# Application Settings
ENVIRONMENT=development
DEBUG=true
APP_NAME=MorphPost
APP_VERSION=1.0.0
APP_DESCRIPTION=AI-Powered Multi-Platform Content Creation

# CORS Settings
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://localhost:8080"]
CORS_METHODS=["GET","POST","PUT","DELETE","PATCH"]
CORS_HEADERS=["*"]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=<green>{time:YYYY-MM-DD HH:mm:ss.SSS}</green> | <level>{level: <8}</level> | <cyan>{name}</cyan>:<cyan>{function}</cyan>:<cyan>{line}</cyan> - <level>{message}</level>

# API Settings
API_PREFIX=/api/v1
DEFAULT_TIMEZONE=UTC

# Optional: OpenAI (for real AI generation - uncomment when ready)
# OPENAI_API_KEY=sk-your-openai-api-key-here
# LLM_MODEL=gpt-4
# LLM_TEMPERATURE=0.7
# EVALUATOR_MODEL=gpt-4
# EVALUATOR_TEMPERATURE=0.3

# Optional: Platform API Keys (uncomment when implementing integrations)
# LINKEDIN_CLIENT_ID=your-linkedin-client-id
# LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
# TWITTER_API_KEY=your-twitter-api-key
# TWITTER_API_SECRET=your-twitter-api-secret
